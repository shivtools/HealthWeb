extends layout
block content
	script(src='../js/mapScript.js')

	// Banner place to change image
	.banner(style='background-image: url(../images/banner/finances.jpg);')
		.banner_text Emergency financial assistance
	.container
		.sub_text
			p.lead Guiding you through the process of finding emergency financial assistance
	hr

	#listings.container-fluid
		.row
			.col-md-5
				each item, i in financial_list
					#listing.panel.panel-default
						.panel-heading.collapse-button
							h3.name.panel-title=item.name
						.panel-body.panel-collapse.collapse
							table.table.table-responsive.table-hover
								tbody
									tr
										td.details-control
											h5 Website:
											p=item.website
											h5 Services:
											p=item.services
											h5 Requirements to get aid:
											p=item.requirements
											h5 Hours of operation:
											p=item.hours
											h5 Address:
											p#location.location=item.location
											h5 Phone Number:
											p=item.number
											center
												img#imgURL(src=item.imageURL)
											if user
												.row
													.col-md-6
														h5 Created on: 
														p=item.date
													.col-md-6
														h5 Created by:
														p=item.user
												.row
													.col-md-2
													.col-md-3
														a(href="/delete/Financial/#{item.id}")
															.btn.btn-danger Delete post
													.col-md-3
			.col-md-7
				input#search.controls(type="text" placeholder="Enter your home address")
				#mapholder(style="width:100%;height:600px;")
